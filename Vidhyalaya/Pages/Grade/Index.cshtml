@page "/Grades"
@model Vidhyalaya.Pages_Grade.IndexModel



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create"><i class="bi bi-plus-lg"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Grade[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].C_Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].S_Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Teacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.S_Year)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil text-warning"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
